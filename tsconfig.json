{
  "compilerOptions": {
    // File Layout
    "rootDir": "./src",
    "outDir": "./dist",

    // Environment Settings
    "module": "nodenext", // ESModules compat√≠vel com Node
    "target": "esnext",
    "types": ["node"], // adiciona tipos do Node
    "lib": ["dom", "esnext"], // bibliotecas para React + ESNext

    // Other Outputs
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    // Stricter Typechecking Options
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    // JSX e React
    "jsx": "react-jsx",
    "isolatedModules": true
  }
}
